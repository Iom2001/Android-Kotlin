<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidwithKotlin.Wifi_Manager.WifiStateChange">

    <Button
        android:id="@+id/wifion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/simple2_design"
        android:text="WIFI ON" />

    <Button
        android:id="@+id/wifioff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifion"
        android:layout_alignStart="@+id/wifion"
        android:background="@drawable/simple2_design"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:text="WIFI OFF"
        android:layout_alignLeft="@+id/wifion" />
</RelativeLayout>